<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-bottom border-muted">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'logo.png' %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active"><%= link_to "Home", root_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "Book a car", cars_path, class: "nav-link" %></li>
      <% if user_signed_in? %>
        <li class="nav-item"><%= link_to "My cars", listmycars_cars_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Bookings", bookings_path, class: "nav-link" %></li>

        <li class="nav-item"><span class="nav-link font-weight-bold"><%= current_user.first_name %></span></li>
        <li class="nav-item dropdown">
          <%= cl_image_tag(current_user.photo.key, width: 40, 
          class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) unless current_user.photo.attachment.nil? %>
          <%= image_tag("user.png", width: 40, 
          class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) if current_user.photo.attachment.nil? %>
          
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
