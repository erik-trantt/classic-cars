<h1>Here is your Car</h1>
<br>
<div class= "d-flex justify-content-between">
  <div id="carouselExampleCaptions" class="carousel slide p-2 w-100 bd-highlight" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://images.unsplash.com/photo-1587750059638-e7e8c43b99fc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" class="figure-img img-fluid rounded" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Photo 1</h5>
        <p>Super Car</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1508171997656-fdf7cf6c4df9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" class="d.d-none-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Photo 2</h5>
        <p>The ever green</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1542362567-b07e54358753?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Photo 3</h5>
        <p>Red Devil</p>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="shadow p-3 mb-5 bg-white rounded">
<p> Your car details are as follows</p>
<ul>
<br>
<li><p>Name: <%= @car.name %></p></li>
<li><p>Location: <%= @car.location %></p></li>
<li><p>Price/day: <%= @car.price %></p></li>
<li><p>Number of seats: <%= @car.seats %></p></li>
<li><p>Make year: <%= @car.year %></p></li>

</ul>
</div>
</div>


<%= simple_form_for(@booking, method: :post, url: bookings_path) do |f| %>  
  <%= f.input :start_date, as: :string, id: :start_date, required: false, input_html: { class: "datepicker", "data-unavailable-dates": @car.unavailable_dates.to_json } %>
  <%= f.input :end_date, as: :string, id: :end_date, required: false, input_html: { class: "datepicker" } %>
  <%= f.input :car_id, as: "hidden", input_html: { value: @car.id } %>
  <%= f.input :user_id, as: "hidden", input_html: { value: current_user.id } %>
  <%= f.submit 'Book Now', class: "btn btn-primary m-2"  %>
<% end %>


