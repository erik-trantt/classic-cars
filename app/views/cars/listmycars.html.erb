<h1>Your cars</h1>
<% @cars.each do |car| %>
<div class = "shadow p-3 mb-5 bg-white rounded">
<p>Car Name: <%= car.name %></p>
<p>Car Price: <%= car.price %></p>
<p>Car Location: <%= car.location %></p>
<%= link_to "Delete #{car.name}", car_path(car), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger m-2" %>
</div>
<% end %>
<%= link_to "Add New", new_car_path, class: "btn btn-primary m-2" %>
<%= link_to "Home", root_path, class: "btn btn-primary m-2" %>
