<div class="d-flex justify-content-between">
  <div>
    <h1>Confirmation</h1>
    <p>
      Congratulations, <%= @booking.user.first_name %>!
      <br><br>
      You have booked a car in <%= @booking.car.location %> for <%= @days %> days
      <br><br>
      TODO: insert car photo here
      <br><br>
      Booking reference: <%= @booking.id %>
    </p>

    <%= link_to "Upcoming bookings", bookings_path , class: "btn btn-primary" %>
  </div>

  <div class="card m-2 p-3">

    <p>Model: <%= @booking.car.name %>, <%= @booking.car.year %></p>
    <p>Location: <%= @booking.car.location %></p>
    <p>Dates: <%= @booking.start_date.strftime("%B %d, %Y") %> -> <%= @booking.end_date.strftime("%B %d, %Y") %></p>

    <p> $<%= @booking.car.price %> x <%= @days %> days </p>
    <p> Total price: $<%= @booking_price %> </p>

  </div>
</div>






